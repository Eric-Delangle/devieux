{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>FirstName</th>
				<th>LastName</th>
				<th>Location</th>
				<th>Description</th>
				<th>Experience</th>
				<th>MainAvatar</th>
				<th>RegisteredAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.firstName }}</td>
					<td>{{ user.lastName }}</td>
					<td>{{ user.location }}</td>
					<td>{{ user.description }}</td>
					<td>{{ user.experience }}</td>
					<td>{{ user.mainAvatar }}</td>
					<td>{{ user.registeredAt ? user.registeredAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('user_show', {'slug': app.user.slug}) }}">show</a>
						<a href="{{ path('user_edit', {'slug': app.user.slug}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="13">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
