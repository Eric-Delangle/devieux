{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>FirstName</th>
				<td>{{ user.firstName }}</td>
			</tr>
			<tr>
				<th>LastName</th>
				<td>{{ user.lastName }}</td>
			</tr>
			<tr>
				<th>Location</th>
				<td>{{ user.location }}</td>
			</tr>
			<tr>
				<th>Slug</th>
				<td>{{ user.slug }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ user.description }}</td>
			</tr>
			<tr>
				<th>Experience</th>
				<td>{{ user.experience }}</td>
			</tr>
			<tr>
				<th>MainAvatar</th>
				<td>{{ user.mainAvatar }}</td>
			</tr>
			<tr>
				<th>RegisteredAt</th>
				<td>{{ user.registeredAt ? user.registeredAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('category_index', {slug}) }}">back to list</a>

	<a href="{{ path('user_edit', {'slug': app.user.slug}) }}">edit</a>

	{{ include('user/_delete_form.html.twig') }}
{% endblock %}
