{% extends "base.html.twig" %}
{% block title %}
	{{ slug }}
{% endblock %}
{% block body %}
	<h2 class="text-center mt-5">
		Vous êtes dans la catégorie :
		<span class="catColor">{{ category.name }}</span></h2>
	{% for user in category.users %}
		<table class="table table-hover mt-5">
			<thead>
				<tr class="table-primary">
					<th scope="col">Prénom</th>
					<th scope="col">Nom</th>
					<th scope="col">Ville</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				<tr class="table-active">
					<td>{{ user.firstName | capitalize }}</td>
					<td>{{ user.lastName | capitalize}}</td>
					<td>{{ user.location | capitalize }}</td>
					<td>
						<a href="{{ path('category_showUser', {'slug': user.slug}) }}"><button type="button" class="btn btn-primary btn-sm">Profil</button></a>
					</td>
				</tr>

			</tbody>
		</table>

	{% endfor %}

{% endblock %}
