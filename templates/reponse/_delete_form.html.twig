<form method="post" action="{{ path('reponse_delete', {'id': reponse.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cette reponse ?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
	<button class="btn btn-danger btn-sm mt-3">Supprimer</button>
</form>
