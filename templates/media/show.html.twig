{% extends 'base.html.twig' %}

{% block title %}Media{% endblock %}

{% block body %}
    <h1>Media</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medium.id }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ medium.imageName }}</td>
            </tr>
            <tr>
                <th>Caption</th>
